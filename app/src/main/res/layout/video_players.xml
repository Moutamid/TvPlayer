<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:focusable="true"
    android:focusedByDefault="true"
    android:screenReaderFocusable="true"
    android:defaultFocusHighlightEnabled="true"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_margin="25sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Player"
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mxPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    app:cardElevation="0dp"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/mx_player_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="MX Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/xyzPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/xyz_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="XYZ Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/vlcPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/vlc_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="VLC Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/localPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/local_cast_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Local Cast" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/videoPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/video_player_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Video Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/wuffyPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/wuffy_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Wuffy Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/androidPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/android_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Android Player" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/webPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/web_cast_icon" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Web Video Cast" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bubblePlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:screenReaderFocusable="true"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusableInTouchMode="false"
                    android:descendantFocusability="beforeDescendants"
                    android:background="@drawable/item_selector"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/bubble_player_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:text="Bubble UPnP Cast" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/justOnce"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just Once" />

                <Button
                    android:id="@+id/always"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>